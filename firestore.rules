
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read/write their own projects
    match /projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Users can create feedback for their projects
    match /feedback/{feedbackId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Reading/updating feedback might be an admin-only task
      allow read, update, delete: if false; 
    }

    // Users can read their own subscription status
    match /userSubscriptions/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
      // Subscriptions are only managed by backend functions, not clients
      allow list, create, update, delete: if false;
    }

    // Users can read their own transaction history
    match /transactions/{transactionId} {
      allow get, list: if request.auth != null && request.resource.data.userId == request.auth.uid;
       // Transactions are only managed by backend functions, not clients
      allow create, update, delete: if false;
    }
  }
}
