
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User-specific data: User can read/write their own documents and subcollections.
    // This covers /users/{uid}, /users/{uid}/promptHistory/{promptId}, etc.
    match /users/{userId}/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // User settings: User can read/write their own settings document.
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // App-wide announcements: Any authenticated user can read announcements.
    // Writes should only happen from the backend/console, so deny client writes.
    match /appAnnouncements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // The following collections are managed by backend functions. Deny all client access.
    match /transactions/{transactionId} {
      allow read, write: if false;
    }
    match /userSubscriptions/{userId} {
      allow read, write: if false;
    }
  }
}
