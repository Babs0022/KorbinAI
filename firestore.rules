rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny: By default, no one has access to any documents.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and update their own user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Allow users to create, read, update, and delete their own chat sessions.
    match /chatSessions/{chatId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Allow users to create, read, update, and delete their own projects.
    match /projects/{projectId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to create and read their own generation data.
    match /generations/{generationId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Allow users to read and create their own subscriptions.
    // Updates and deletes should be handled by secure backend functions.
    match /userSubscriptions/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }
    
    // Allow users to read and create their own transactions.
    // Updates and deletes should be handled by secure backend functions.
    match /transactions/{transactionId} {
       allow read: if request.auth.uid == resource.data.userId;
       allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
