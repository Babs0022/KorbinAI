
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /userSubscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read announcements
    match /appAnnouncements/{announcementId} {
      allow read: if true;
    }
    
    // Team data security
    match /teams/{teamId} {
      // Members can read team data.
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      // Only the owner can write to the main team document.
      allow write: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    match /teams/{teamId}/{collection}/{docId} {
       // Only team members can access sub-collections
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/teams/$(teamId)).data.members[request.auth.uid] != null;
    }
    
    match /teams/{teamId}/sharedPrompts/{promptId} {
      // Admins and editors can create, update, delete prompts
      allow create, update, delete: if request.auth != null && (get(/databases/$(database)/documents/teams/$(teamId)).data.members[request.auth.uid].role == 'admin' || get(/databases/$(database)/documents/teams/$(teamId)).data.members[request.auth.uid].role == 'editor');
    }

    match /teams/{teamId}/chatMessages/{messageId} {
      // Team members can create messages
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
    }

    // Prevent client-side writes to sensitive collections handled by backend functions
    match /newsletterSubscribers/{email} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    match /transactions/{transactionId} {
      allow write: if false;
    }
  }
}
