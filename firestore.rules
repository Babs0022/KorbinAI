
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Users can only read/write their own projects
    match /projects/{projectId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Users can read/write feedback they created
    match /feedback/{feedbackId} {
        allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Users can only read their own subscription documents
    match /userSubscriptions/{userId} {
      allow read: if request.auth.uid == userId;
      // Write access is typically handled by secure Cloud Functions
      allow write: if false; 
    }
    
    // Transactions are written by Cloud Functions, only allow reads by the user who owns it
    match /transactions/{transactionId} {
        allow read: if request.auth.uid == resource.data.userId;
        allow write: if false;
    }
  }
}
