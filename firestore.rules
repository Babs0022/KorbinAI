rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own prompt history, and onboarding data.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User settings can only be read/written by the user themselves.
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Anyone can read announcements. No one can write from the client.
    match /appAnnouncements/{announcementId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow anyone to submit to the newsletter collection.
    // They can only create, not read, update, or delete, for privacy.
    match /newsletterSubscribers/{subscriberId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Subscriptions and transactions are managed by backend functions.
    // Users can read their own subscription/transaction data.
    match /userSubscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }
    
    match /transactions/{transactionId} {
      // Allow user to read their own transaction details.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Writes are handled by backend Cloud Functions
      allow write: if false; 
    }
  }
}
