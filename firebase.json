
{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  },
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "app": {
          "secretEnvironmentVariables": [
            {
              "key": "NEXT_PUBLIC_FIREBASE_API_KEY",
              "secret": "NEXT_PUBLIC_FIREBASE_API_KEY"
            }
          ]
        }
      }
    ]
  }
}
